<% provide :title, @profile.user.name %>

<section id="profile">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <p id="notice"><%= notice %></p>

        <p>
          <strong>Data de nascimento:</strong>
          <%= @profile.birthdate %>
        </p>

        <p>
          <strong>Genero:</strong>
          <%= @profile.gender %>
        </p>

        <p>
          <strong>Bio:</strong>
          <%= @profile.bio %>
        </p>

        <p>
          <strong>Localização:</strong>
          <%= @profile.location %>
        </p>

        <p>
          <strong>Estado:</strong>
          <%= @profile.state %>
        </p>

        <p>
          <strong>Country:</strong>
          <%= @profile.country %>
        </p>

        <%= link_to 'Edit', edit_dashboard_profile_path(@profile) %> |
        <%= link_to 'Back', dashboard_profile_path %>
      </div>
    </div>
  </div>
</section>